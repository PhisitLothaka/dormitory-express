// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String  @unique
  password     String
  idCard       String  @unique
  mobile       String
  prefixName   String
  profileImage String?
}

model Admin {
  id        Int    @id @default(autoincrement())
  password  String
  email     String @unique
  mobile    String
  firstName String
  lastName  String
}
